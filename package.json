{
  "name": "grants-service",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "engines": {
    "node": ">=8.3.0"
  },
  "scripts": {
    "start": "sls offline start",
    "test": "eslint . && jest --detectOpenHandles",
    "format": "prettier --single-quote --write *.js *.yml {grants,lib}/**/*.js README.md",
    "deployTest": "sls deploy --stage=test --region=eu-west-2",
    "deployProd": "sls deploy --stage=prod --region=eu-west-2"
  },
  "eslintConfig": {
    "plugins": [
      "node"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {
      "no-unused-vars": "warn",
      "node/no-unpublished-require": "off",
      "node/shebang": "off",
      "strict": [
        "warn",
        "safe"
      ]
    }
  },
  "eslintIgnore": [
    ".serverless/"
  ],
  "jest": {
    "globalSetup": "./test/setup.js",
    "globalTeardown": "./test/teardown.js",
    "testEnvironment": "./test/mongo-environment.js"
  },
  "dependencies": {
    "dotenv": "^6.0.0",
    "lodash": "^4.17.10",
    "moment": "^2.22.2",
    "express": "^4.16.3",
    "mongodb": "^3.0.10",
    "request": "^2.87.0",
    "request-promise-native": "^1.0.5",
    "serverless-http": "^1.6.0"
  },
  "devDependencies": {
    "csv-parse": "3.0.0",
    "csv-parser": "1.12.1",
    "eslint": "5.4.0",
    "eslint-plugin-node": "7.0.1",
    "event-stream": "^3.3.4",
    "jest": "^23.5.0",
    "jest-environment-node": "^23.4.0",
    "mongodb-memory-server": "^2.1.0",
    "nodemon": "^1.17.5",
    "prettier": "1.14.2",
    "serverless": "^1.30.3",
    "serverless-domain-manager": "^2.6.0",
    "serverless-offline": "^3.25.9",
    "split": "1.0.1",
    "yargs": "^12.0.1"
  }
}
