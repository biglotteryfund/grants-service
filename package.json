{
  "name": "grants-service",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "engines": {
    "node": ">=8.3.0"
  },
  "scripts": {
    "start": "sls offline start --dontPrintOutput",
    "test": "npm audit && eslint . && jest --detectOpenHandles",
    "format": "prettier --single-quote --write *.js *.yml {grants,lib}/**/*.js README.md",
    "deployTest": "sls deploy --stage=test --region=eu-west-2",
    "deployProd": "sls deploy --stage=prod --region=eu-west-2"
  },
  "eslintConfig": {
    "plugins": [
      "node"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": "warn",
      "node/no-unpublished-require": "off",
      "node/shebang": "off",
      "strict": [
        "warn",
        "safe"
      ]
    }
  },
  "eslintIgnore": [
    ".serverless/"
  ],
  "jest": {
    "globalSetup": "./test/setup.js",
    "globalTeardown": "./test/teardown.js",
    "testEnvironment": "./test/mongo-environment.js"
  },
  "dependencies": {
    "dotenv": "6.1.0",
    "express": "4.16.4",
    "lodash": "4.17.11",
    "moment": "^2.22.2",
    "mongodb": "3.1.8",
    "request": "2.88.0",
    "request-promise-native": "^1.0.5",
    "server-timings": "2.0.1",
    "serverless-http": "^1.6.0"
  },
  "devDependencies": {
    "csv-parse": "3.0.0",
    "csv-parser": "1.12.1",
    "eslint": "5.7.0",
    "eslint-plugin-node": "7.0.1",
    "event-stream": "^3.3.4",
    "jest": "23.6.0",
    "jest-environment-node": "^23.4.0",
    "mongodb-memory-server": "2.4.3",
    "nodemon": "1.18.4",
    "prettier": "1.14.3",
    "serverless": "1.32.0",
    "serverless-domain-manager": "2.6.5",
    "serverless-offline": "3.31.0",
    "split": "1.0.1",
    "yargs": "^12.0.1"
  }
}
